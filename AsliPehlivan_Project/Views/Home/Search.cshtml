@model AsliPehlivan_Project.ViewModel.SearchModel
@{
    ViewData["Title"] = "Arama";
}

<h1>Arama</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label asp-for="SearchText" class="control-label"></label>
                <input asp-for="SearchText" class="form-control" />
            </div>
            <div class="form-group form-check">
            </div>
            <div class="form-group">
                <input type="submit" value="Ara" class="btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (Model?.Results != null)
{
    <h3>Arama Sonuçları</h3>
    <h5>@Model.Results.Count adet sonuç bulundu.</h5>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Adres
                    </th>
                    <th>
                        İl
                    </th>
                    <th>
                        Detay
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>

                        <td>
                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id">Sipariş Detayı</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}